<%- include('../header.ejs'); %>

    <div id="page-wrapper">

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        編輯帳號
                        <small>Edit User</small>
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i> <a href="/admin">Dashboard</a>
                        </li>
                        <li>
                            <i class="fa fa-folder"></i> 帳號管理
                        </li>
                        <li class="active">
                            <i class="fa fa-user"></i> 編輯帳號
                        </li>
                    </ol>
                </div>
                <!--新增帳號表單區塊-->
                <div class="col-lg-12">
                    <form role="form" action="" method="POST">

                        <div class="form-group">
                            <label>帳號名稱:</label>
                            <input class="form-control" name="account" value="<%= user.account%>">
                        </div>
                        <div class="form-group">
                            <label>email:</label>
                            <input class="form-control" name="email" value="<%= user.email%>">
                        </div>
                        <div class="form-group">
                            <label>允許存取:</label>
                            <select class="form-control" name="valid">
                            <% if (user.valid=="" || user.valid=="N") { %>
                            <option value="N" selected>N</option>
                            <option value="Y">Y</option>
                            <% } else { %>
                            <option value="N">N</option>
                            <option value="Y" selected>Y</option>
                            <% } %>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-default">儲存</button>
                        <button type="reset" class="btn btn-default">取消</button>
                    </form>
                </div>
                <!--新增帳號表單區塊結尾-->
            </div>
            <!-- /.row -->

        </div>
        <!-- /.container-fluid -->

    </div>

    <%- include('../footer.ejs'); %>