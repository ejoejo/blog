<%- include('../header.ejs'); %>

    <div id="page-wrapper">

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        所有帳號
                        <small>All Users</small>
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i> <a href="/admin">Dashboard</a>
                        </li>
                        <li>
                            <i class="fa fa-user"></i> 帳號管理
                        </li>
                        <li class="active">
                            <i class="fa fa-table"></i> 所有帳號
                        </li>
                    </ol>
                </div>

                <div class="col-lg-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>編號</th>
                                    <th>帳號</th>
                                    <th>編輯</th>
                                    <th>刪除</th>
                                </tr>
                            </thead>
                            <tbody>

                                <%   for(var index = 0; index < users.length; index++){ %>
                                    <% var user = users[index]; %>
                                        <tr>
                                            <td>
                                                <%= (index+1) %>
                                            </td>
                                            <td>
                                                <%= user.account %>
                                            </td>
                                            <td><a href="/admin/users/edit/<%= user.account %>">編輯</a></td>
                                            <td><a href="/admin/users/delete/<%= user.account %>">刪除</a></td>
                                        </tr>

                                        <% } %>


                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <!-- /.row -->

        </div>
        <!-- /.container-fluid -->

    </div>

    <%- include('../footer.ejs'); %>